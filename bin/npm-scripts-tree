#!/usr/bin/env node

var path = require("path");
var cli = require("../");

var argv = require("minimist")(process.argv.slice(2));

function getScripts () {
  var pkg;

  try {
    pkg = require(path.resolve("package.json"));
    return pkg.scripts;
  } catch (e) {
    return null;
  }
}

var scripts = getScripts();

console.log(cli.main(scripts, argv));
