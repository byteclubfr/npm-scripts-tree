#!/usr/bin/env node

var path = require("path")
var cli = require("../")

var argv = require("minimist")(process.argv.slice(2))

function getScripts (file = "package.json") {
  var pkg

  try {
    pkg = require(path.resolve(file))
    return pkg.scripts
  } catch (e) {
    return null
  }
}

const scripts = getScripts(argv._[0])

console.log(cli.main(scripts, argv))
